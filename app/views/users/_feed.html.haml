- @wall_posts.reverse.each do |post|
  .panel.wall_post
    .row
      .small-1.columns
        = image_tag post.user.profile_photo
      .small-11.columns
        - if post.user == post.recipient
          %h5{:style => "margin-bottom:0;"}= link_to post.user.full_name, user_path(post.user)
        - else
          %h5{:style => "margin-bottom:0;"}
            = link_to post.user.full_name, user_path(post.user)
            \&gt; #{link_to post.recipient.full_name, user_path(post.recipient)}
        %span{:style => "font-size:10px;"}
          = time_ago_in_words(post.created_at)
          ago
      .row
        .small-12.columns
          %span{:style => "margin-left:5px;"}= post.body
